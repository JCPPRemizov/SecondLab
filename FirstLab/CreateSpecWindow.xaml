<Window x:Class="FirstLab.CreateSpecWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstLab"
        mc:Ignorable="d"
        Title="CreateSpecWindow" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="108*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="NameTextBox" TextWrapping="Wrap" Grid.Row="1" Margin="10,18,10,18"/>
        <Button Content="Добавить специализацию" Grid.Row="2" Margin="10,16,10,15" Click="Button_Click"/>
        <TextBlock TextWrapping="Wrap" FontWeight="Bold" FontSize="16" Margin="10,8,10,8"><Run Language="ru-ru" Text="Название специализации завода"/><LineBreak/><Run/></TextBlock>

    </Grid>
</Window>
